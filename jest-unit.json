{
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "rootDir": ".",
  "testRegex": "(/test/.*\\.spec|\\.spec)\\.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "collectCoverageFrom": [
    "**/*.(t|j)s"
  ],
  "coverageDirectory": "./coverage",
  "testEnvironment": "node",
  "roots": [
    "<rootDir>/src/",
    "<rootDir>/test/"
  ],
  "transformIgnorePatterns": [
    "/node_modules/(?!nanoid)/"
  ]
}
